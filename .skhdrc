# Move between windows 
alt - x : yabai -m window --focus recent
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east
alt - j : yabai -m window --focus south
alt - h : yabai -m window --focus west

# Balance size of windows
shift + alt - 0 : yabai -m space --balance
 
# Alter padding and window gap
alt - p : yabai -m space --toggle padding && yabai -m space --toggle gap
alt - s : yabai -m space --padding rel:20:20:20:20 && yabai -m space --gap rel:20
alt - b : yabai -m space --padding rel:-20:-20:-20:-20 && yabai -m space --gap rel:-20

# Increase window size
alt - left  : yabai -m window --resize left:-20:0
alt - down  : yabai -m window --resize bottom:0:20
alt - up    : yabai -m window --resize top:0:-20
alt - right : yabai -m window --resize right:20:0

# Decrease window size
shift + alt - left  : yabai -m window --resize right:-20:0
shift + alt - down  : yabai -m window --resize top:0:20
shift + alt - up    : yabai -m window --resize bottom:0:-20
shift + alt - right : yabai -m window --resize left:20:0

# Toggle vertical vs horizontal split 
alt - r : yabai -m window --toggle split 
# Rotate tree
shift + alt - r : yabai -m space --rotate 90 

# Swap window
shift + alt - x : yabai -m window --swap recent
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Move window to other desktop
shift + ctrl - x : yabai -m window --display recent
shift + ctrl - h : yabai -m window --display west
shift + ctrl - l : yabai -m window --display east

# Toggle whether a window is floating 
shift + cmd - f : yabai -m window --toggle float
# Make floating window fill left-half of screen
shift + cmd - h : yabai -m window --grid 1:2:0:0:1:1
# Make floating window fill right-half of screen
shift + cmd - l : yabai -m window --grid 1:2:1:0:1:1

# Toggle focused window fullscreen
alt - z : yabai -m window --toggle zoom-parent


